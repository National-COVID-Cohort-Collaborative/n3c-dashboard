<?xml version="1.0" encoding="utf-8"?>

    <!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

    <urlrewrite>

		<rule>
			<name>ignore js and css</name>
			<from>^(.*(\.css|\.js))$</from>
			<to last="true">-</to>
		</rule> 
		
		<rule>
    		<from>^/?([a-z]+)$</from>
    		<to>/$1.jsp</to>
  		</rule>
  		
    </urlrewrite>